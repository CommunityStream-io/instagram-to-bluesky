{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleDetection": "auto",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@bluesky/*": ["src/bluesky/*"],
      "@image/*": ["src/image/*"],
      "@logger/*": ["src/logger/*"],
      "@media/*": ["src/media/*"],
      "@video/*": ["src/video/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*test.ts"]
}